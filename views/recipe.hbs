{{!-- Create Prodcuts table --}}
<table border="1" cellpadding="5"  id="recipe-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the product_id, , flavor, price per bottle, in order + delete button --}}
        {{#each data}}
        <tr data-value="{{this.product_id}}">
            <td>{{this.flavor}}</td>
            <td>{{this.material_name}}</td>
            <td>{{this.required_oz}}</td>
            <td><button onclick="deleteRecipe({{this.product_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>

</table>
<script src="./js/delete_raw_material.js"></script>


